
<div class="show_map">
  <div id="map-canvas"></div>
</div>

<div id="sidebar">
  <div id="profile">
    <img src='<%= current_user.picture_url %>' alt="UBER Profile Pic" class="profile_pic">
    <h5><%= @current_user.first_name %></h5>
    <input class="dest_input" placeholder="<%= @dest_add %>" autofocus>
  </div>

  <div id="bcycle">
    <div class="service-logo">
      <img src="/assets/b_cycle_logo.jpg" alt="B-Cycle Logo" class="b_cycle_logo">
    </div>
    <!-- <div id="bcycle_price">
      <h1>$</h1>
      <h3><%= "8" %></h3>
    </div>
    <div id="time">
      <h1><i class="foundicon-[clock]"></i></h1>
      <h3><%= "X" %> MIN</h3>
      <hr noshade size=1>
      <h5><%= "X" %> MIN walk</h5>
      <h5><%= "X" %> MIN ride</h5>
    </div> -->

  </div>

  <div id="car2go">
    <div class="service-logo">
      <img src="/assets/car2go_logo.png" alt="car2go Logo" class="car2go_logo">
    <!-- <h5>Car2Go</h5> -->
    </div>
  </div>

  <div id="uber" class="row">
    <div class="service-logo">
      <img src="/assets/uber_logo.png" alt="UBER Logo" class="uber_logo">
    </div>
    <div id="uber_price" class="service-price">
      <h2>$</h2>
      <h3><%= "0" %></h3>
    </div>
    <div id="uber_time" class="service-time">
      <h1><i class="foundicon-[clock]"></i></h1>
      <ul>
        <h2 class="same"><%= "X" %> MIN</h2>
        <li><%= "0" %> MIN wait</li>
        <li><%= "X" %> MIN ride</li>
      </ul>
    </div>
    <div class="service-actions">
      <a href="#" data-reveal-id="myModal">GO</a>

      <div id="myModal" class="reveal-modal" data-reveal>
        <h2>Book an UBER</h2>
        <p class="lead">Ability to book UBER through this app is unavailable at this time.</p>
        <p>This feature is coming soon, in the meantime click here to book:</p>
        <a class="close-reveal-modal">&#215;</a>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  var locations = [
  <% @car2go.each do |car| %>
    ["<%= car["address"] %>",
      <%= car["coordinates"][1] %>,
      <%= car["coordinates"][0] %>,
     "<%= car["name"] %>",
     "<%= car["interior"] %>",
     "<%= car["exterior"] %>"],
  <% end %>
  ];

  var bCycles = [
  <% @b_cycle_stations.each do |bcycle| %>
    ["<%= bcycle.station_name %>",
      <%= bcycle.num_docks %>,
      <%= bcycle.latitude %>,
      <%= bcycle.longitude %>,
     "<%= bcycle.full_street_address %>"],
  <% end %>
  ];

  var destAddLat = "<%= @dest_add_lat %>";
  var destAddLon = "<%= @dest_add_lon %>";
</script>
